{% extends "_layouts/base.twig" %}

{% set title = "Business Signup - FREE" %}

{% block content %}
<div class="max-w-md mx-auto mt-8 mb-16">
	<div class="bg-white rounded-lg shadow-md p-8">
		<div class="text-center mb-8">
			<div class="mx-auto w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
				<svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
				</svg>
			</div>
			<h1 class="text-3xl font-bold text-green-600">Business Signup</h1>
			<p class="text-gray-600 mt-2">Join Gifts Around - It's completely <span class="font-semibold text-green-600">FREE</span> for businesses!</p>
			<div class="bg-green-50 border border-green-200 rounded-lg p-3 mt-4">
				<p class="text-sm text-green-800">✓ FREE to advertise monthly specials<br>✓ Reach thousands of local customers<br>✓ No monthly fees or hidden costs</p>
			</div>
		</div>

		{% set form = craft.freeform.form('businessSignUp') %}

		{% if form %}
			{{ form.render({
				attributes: {
					row: { class: 'mb-5' },
					container: { class: 'space-y-5' }
				},
				fields: {
					'@global': {
						attributes: {
							label: { class: 'block text-sm font-medium text-gray-700 mb-2' },
							input: { class: 'w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' },
							instructions: { class: 'text-sm text-gray-500 mt-1' },
							error: { class: 'text-sm text-red-600 mt-1' }
						}
					},
					'@checkbox': {
						attributes: {
							input: { class: 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500' },
							label: { class: 'text-sm text-gray-700' }
						}
					},
					'@submit': {
						attributes: {
							container: { class: 'pt-2' },
							input: { class: 'w-full bg-green-600 text-white py-3 px-4 rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors font-medium text-lg' }
						}
					}
				}
			}) }}
		{% else %}
			<div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
				<p class="text-yellow-800">The business signup form is currently unavailable. Please try again later or contact support.</p>
			</div>
		{% endif %}

		<div class="mt-6 text-center">
			<p class="text-gray-600">
				Looking for a personal account instead?
				<a href="/users/register" class="text-blue-600 hover:text-blue-700 font-medium">Sign up as a customer</a>
			</p>
		</div>
	</div>
</div>
{% endblock %}
