{% extends "_layouts/base.twig" %}

{% block title %}Businesses - {{ parent() }}{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Page Header -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-green-600 mb-4">Local Businesses</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Discover amazing local businesses in your community
        </p>
    </div>

    {% set businesses = craft.entries.section('business').all() %}



    <!-- Business Grid -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {% for business in businesses %}
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col h-full">
                <!-- Business Image -->
                <div class="relative h-48 bg-gray-200">
                    {% if business.businessImages|length > 0 %}
                        {% set firstImage = business.businessImages[0] %}
                        <img src="{{ firstImage.url }}"
                             alt="{{ firstImage.title ?: business.title }}"
                             class="w-full h-full object-cover">

                        <!-- Image Count Badge -->
                        {% if business.businessImages|length > 1 %}
                            <div class="absolute top-3 right-3 bg-black bg-opacity-70 text-white text-xs px-2 py-1 rounded-full">
                                <svg class="inline w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                                </svg>
                                <span>{{ business.businessImages|length }}</span>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="w-full h-full flex items-center justify-center">
                            <svg class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                        </div>
                    {% endif %}
                </div>

                <!-- Business Info -->
                <div class="p-6 flex flex-col flex-grow">
                    <h3 class="text-xl font-bold text-gray-900 mb-3">{{ business.title }}</h3>

                    <!-- Contact Details -->
                    <div class="space-y-2 text-sm text-gray-600 mb-4">
                        <!-- Address -->
                        {% set businessAddress = business.businessAddress.one() %}
                        {% if businessAddress %}
                            <div class="flex items-start">
                                <svg class="w-4 h-4 text-gray-400 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                <span class="line-clamp-2">{{ businessAddress | address }}</span>
                            </div>
                        {% endif %}

                        <!-- Phone -->
                        {% if business.businessPhone %}
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-gray-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                                <a href="tel:{{ business.businessPhone|replace({' ': '', '-': '', '(': '', ')': ''}) }}"
                                   class="hover:text-blue-600 transition-colors">{{ business.businessPhone }}</a>
                            </div>
                        {% endif %}

                        <!-- Email -->
                        {% if business.businessEmail %}
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-gray-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                                <a href="mailto:{{ business.businessEmail }}"
                                   class="hover:text-blue-600 transition-colors">{{ business.businessEmail }}</a>
                            </div>
                        {% endif %}
                    </div>

                    <!-- View Details Button -->
                    <a href="{{ business.url }}"
                       class="inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors mt-auto">
                        View Details
                        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Empty State -->
    {% if businesses|length == 0 %}
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <h3 class="mt-4 text-lg font-medium text-green-600">No businesses found</h3>
            <p class="mt-2 text-gray-500">Check back later for new business listings.</p>
        </div>
    {% endif %}
</div>

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>
{% endblock %}
