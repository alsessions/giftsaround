{% extends "_layouts/base.twig" %}

{% block title %}Redemption History - {{ parent() }}{% endblock %}

{% block content %}
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-blue-50 to-green-50 p-6 md:p-8 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">Your Redemption History</h1>
                    <p class="text-gray-600">Track all your special offers and redemptions</p>
                </div>
                <div class="flex-shrink-0">
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content -->
        <div class="p-6 md:p-8">
            {% if tokens|length > 0 %}
                <!-- Statistics -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    {% set totalTokens = tokens|length %}
                    {% set usedTokens = tokens|filter(t => t.usedAt)|length %}
                    {% set expiredTokens = tokens|filter(t => t.isExpired and not t.usedAt)|length %}
                    {% set activeTokens = tokens|filter(t => t.isValid)|length %}

                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                                </svg>
                            </div>
                            <div class="ml-4">
                                <p class="text-2xl font-bold text-blue-900">{{ totalTokens }}</p>
                                <p class="text-blue-700">Total Generated</p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <div class="ml-4">
                                <p class="text-2xl font-bold text-green-900">{{ usedTokens }}</p>
                                <p class="text-green-700">Successfully Used</p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div class="ml-4">
                                <p class="text-2xl font-bold text-amber-900">{{ activeTokens }}</p>
                                <p class="text-amber-700">Still Active</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Token List -->
                <div class="space-y-6">
                    {% for token in tokens %}
                        {% set business = token.business %}
                        <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
                            <div class="flex items-start justify-between">
                                <div class="flex-grow">
                                    <div class="flex items-start">
                                        <div class="flex-grow">
                                            <h3 class="text-lg font-semibold text-gray-900 mb-2">
                                                {% if business %}
                                                    <a href="{{ business.url }}" class="hover:text-blue-600 transition-colors">
                                                        {{ business.title }}
                                                    </a>
                                                {% else %}
                                                    Business (Unavailable)
                                                {% endif %}
                                            </h3>

                                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600 mb-4">
                                                <div>
                                                    <strong>Type:</strong>
                                                    {% if token.redeemType == 'oneSpecial' %}
                                                        One-Time Special
                                                    {% else %}
                                                        Monthly Special
                                                        {% if token.monthData %}
                                                            {% set monthInfo = token.monthData|split('|') %}
                                                            ({{ monthInfo[0] ?? 'Unknown Month' }})
                                                        {% endif %}
                                                    {% endif %}
                                                </div>
                                                <div>
                                                    <strong>Generated:</strong> {{ token.dateCreated|date('M j, Y g:i A') }}
                                                </div>
                                                <div>
                                                    <strong>Expires:</strong> {{ token.expiresAt|date('M j, Y g:i A') }}
                                                </div>
                                                {% if token.usedAt %}
                                                    <div>
                                                        <strong>Used:</strong> {{ token.usedAt|date('M j, Y g:i A') }}
                                                    </div>
                                                {% endif %}
                                            </div>

                                            {% if token.monthData and token.redeemType == 'monthlySpecial' %}
                                                {% set monthInfo = token.monthData|split('|') %}
                                                {% if monthInfo[1] is defined %}
                                                    <div class="bg-gray-50 rounded-lg p-3 mb-4">
                                                        <p class="text-sm text-gray-700">
                                                            <strong>Special Offer:</strong> {{ monthInfo[1] }}
                                                        </p>
                                                    </div>
                                                {% endif %}
                                            {% endif %}
                                        </div>

                                        <div class="ml-4 flex-shrink-0">
                                            {% if token.usedAt %}
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                                    </svg>
                                                    Used
                                                </span>
                                            {% elseif token.isExpired %}
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                                    </svg>
                                                    Expired
                                                </span>
                                            {% else %}
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                                    </svg>
                                                    Active
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                                <div class="text-xs text-gray-500">
                                    Token: {{ token.token|upper|slice(0, 8) }}...{{ token.token|upper|slice(-8) }}
                                </div>
                                <div class="space-x-2">
                                    {% if token.isValid %}
                                        <a href="/business/redeem/{{ token.token }}"
                                           class="inline-flex items-center px-3 py-1 text-sm font-medium bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                                            </svg>
                                            Use Now
                                        </a>
                                    {% endif %}
                                    {% if business %}
                                        <a href="{{ business.url }}"
                                           class="inline-flex items-center px-3 py-1 text-sm font-medium bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                            </svg>
                                            View Business
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

            {% else %}
                <!-- Empty State -->
                <div class="text-center py-12">
                    <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                    </svg>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No Redemptions Yet</h3>
                    <p class="text-gray-600 mb-6">You haven't generated any redemption tokens yet. Start by browsing businesses and redeeming their special offers!</p>
                    <a href="/business"
                       class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        Browse Businesses
                    </a>
                </div>
            {% endif %}

            <!-- Actions -->
            <div class="mt-8 pt-6 border-t border-gray-200 flex justify-between items-center">
                <a href="/account" class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back to Account
                </a>

                <div class="space-x-4">
                    <a href="/business" class="inline-flex items-center px-4 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        Find More Deals
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
