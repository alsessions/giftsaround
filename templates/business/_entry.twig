{% extends "_layouts/base.twig" %}

{% block title %}{{ entry.title }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Business Header -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
        <!-- Hero Image Section -->
        {% if entry.businessImages|length %}
            <div class="h-64 md:h-96 relative bg-gray-200">
                {% set firstImage = entry.businessImages[0] %}
                <img src="{{ firstImage.url }}"
                     alt="{{ firstImage.title ?: entry.title }}"
                     class="w-full h-full object-cover business-hero-image"
                     width="800"
                     height="384"
                     loading="eager"
                     style="aspect-ratio: 800/384;">
            </div>
        {% else %}
            <!-- Placeholder if no images -->
            <div class="h-64 md:h-96 bg-gray-200 flex items-center justify-center">
                <div class="text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <p class="mt-2 text-gray-500">No images available</p>
                </div>
            </div>
        {% endif %}

        <!-- Business Information -->
        <div class="p-6 md:p-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">{{ entry.title }}</h1>

            <!-- Contact Information Grid -->
            <div class="grid md:grid-cols-2 gap-6">
                <!-- Address -->
                {% set businessAddress = entry.businessAddress.one() %}
                {% if businessAddress %}
                    <div class="flex items-start space-x-3">
                        <svg class="w-6 h-6 text-gray-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Address</h3>
                            <p class="text-gray-700 whitespace-pre-line">{{ businessAddress | address }}</p>
                        </div>
                    </div>
                {% endif %}

                <!-- Phone -->
                {% if attribute(entry, 'businessPhone')|length %}
                    <div class="flex items-start space-x-3">
                        <svg class="w-6 h-6 text-gray-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Phone</h3>
                            <a href="tel:{{ attribute(entry, 'businessPhone')|replace({' ': '', '(': '', ')': '', '-': ''}) }}"
                               class="text-blue-600 hover:text-blue-800 transition-colors">
                                {{ attribute(entry, 'businessPhone') }}
                            </a>
                        </div>
                    </div>
                {% endif %}

                <!-- Email -->
                {% if attribute(entry, 'businessEmail')|length %}
                    <div class="flex items-start space-x-3">
                        <svg class="w-6 h-6 text-gray-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
                            <a href="mailto:{{ attribute(entry, 'businessEmail') }}"
                               class="text-blue-600 hover:text-blue-800 transition-colors">
                                {{ attribute(entry, 'businessEmail') }}
                            </a>
                        </div>
                    </div>
                {% endif %}

                <!-- Website -->
                {% if attribute(entry, 'businessWebsite')|length %}
                    <div class="flex items-start space-x-3">
                        <svg class="w-6 h-6 text-gray-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Website</h3>
                            <a href="{{ attribute(entry, 'businessWebsite') }}" target="_blank" rel="noopener noreferrer"
                               class="text-blue-600 hover:text-blue-800 transition-colors inline-flex items-center">
                                {{ attribute(entry, 'businessWebsite')|replace({'https://': '', 'http://': '', 'www.': ''}) }}
                                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endif %}

                <!-- Category -->
                {% set businessCategories = entry.category.all() %}
                {% if businessCategories|length > 0 %}
                    <div class="flex items-start space-x-3">
                        <svg class="w-6 h-6 text-gray-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Category</h3>
                            <div class="flex flex-wrap gap-2">
                                {% for category in businessCategories %}
                                    <a href="/category/{{ category.slug }}" class="inline-flex items-center px-3 py-1 text-sm font-medium bg-blue-100 text-blue-800 rounded-full hover:bg-blue-200 transition-colors">
                                        {{ category.title }}
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}

            </div>

            <!-- Special Offer -->
            {% if entry.oneSpecial|length %}
                <div class="mt-6 pt-6 border-t border-gray-200">
                    <div class="flex items-start space-x-3">
                        <svg class="w-6 h-6 text-red-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Member Only Specials!</h3>
                            <p class="text-gray-700">{{ entry.oneSpecial }}</p>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Monthly Specials -->
            {% if entry.monthlySpecials|length %}
                <div class="mt-6 mb-20 pt-6 border-t border-gray-200" x-data="{ expanded: false }">
                    <button @click="expanded = !expanded" class="flex items-center text-left group">
                        <svg class="w-6 h-6 text-red-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                        </svg>
                        <h3 class="font-semibold text-gray-900">Member Only Specials</h3>
                        <svg class="w-5 h-5 text-gray-500 transition-transform duration-200 ml-2" :class="{ 'rotate-180': expanded }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <div x-show="expanded" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform scale-95" x-transition:enter-end="opacity-100 transform scale-100" x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100 transform scale-100" x-transition:leave-end="opacity-0 transform scale-95" class="mt-4 overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            {% if entry.monthlySpecials[0] %}
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Month</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Special</th>
                                    </tr>
                                </thead>
                            {% endif %}
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for row in entry.monthlySpecials %}
                                    <tr class="{% if loop.index is odd %}bg-white{% else %}bg-gray-50{% endif %}">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ row.month }}</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ row.special }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Image Gallery -->
    {% if entry.businessImages|length > 1 %}
        <div class="bg-white rounded-lg shadow-lg p-6 md:p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Gallery</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                {% for image in entry.businessImages %}
                    <div class="aspect-square overflow-hidden rounded-lg bg-gray-200">
                        <img src="{{ image.url }}"
                             alt="{{ image.title ?: entry.title ~ ' - Image ' ~ loop.index }}"
                             class="gallery-image hover:opacity-90 transition-opacity"
                             width="300"
                             height="300"
                             loading="lazy"
                             style="aspect-ratio: 1/1;">
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <!-- Back to Businesses List -->
    <div class="mt-8">
        <a href="/business" class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to All Businesses
        </a>
    </div>
</div>

<style>
/* Prevent layout shifts during image loading */
img {
    max-width: 100%;
    height: auto;
}

/* Ensure consistent spacing */
.business-hero-image {
    min-height: 16rem; /* h-64 */
}

@media (min-width: 768px) {
    .business-hero-image {
        min-height: 24rem; /* md:h-96 */
    }
}

/* Gallery grid consistent sizing */
.gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
</style>
{% endblock %}
