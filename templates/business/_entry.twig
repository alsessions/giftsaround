{% extends "_layouts/base.twig" %}

{% block title %}{{ entry.title }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto min-h-screen">
    <!-- Business Header -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <!-- Hero Image Section -->
        {% if entry.businessImages|length %}
            <div class="h-64 md:h-96 relative bg-gray-200">
                {% set firstImage = entry.businessImages[0] %}
                {% if firstImage.optimizedImage is defined and firstImage.optimizedImage %}
                <picture>
                    <source srcset="{{ firstImage.optimizedImage.srcWebp() }}" type="image/webp">
                    <source srcset="{{ firstImage.optimizedImage.src() }}" type="image/jpeg">
                    <img src="{{ firstImage.url }}" alt="{{ firstImage.title ?: entry.title }}" class="w-full h-full object-cover business-hero-image" width="800" height="384" loading="eager" style="aspect-ratio: 800/384;">
                </picture>
                {% else %}
                <img src="{{ firstImage.url }}" alt="{{ firstImage.title ?: entry.title }}" class="w-full h-full object-cover business-hero-image" width="800" height="384" loading="eager" style="aspect-ratio: 800/384;">
                {% endif %}
            </div>
        {% else %}
            <!-- Placeholder if no images -->
            <div class="h-64 md:h-96 bg-gray-200 flex items-center justify-center">
                <div class="text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <p class="mt-2 text-gray-500">No images available</p>
                </div>
            </div>
        {% endif %}

        <!-- Business Information -->
        <div class="p-6 md:p-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">{{ entry.title }}</h1>

            <!-- Contact Information Grid -->
            <div class="grid md:grid-cols-2 gap-6">
                <!-- Address -->
                {% set businessAddress = entry.businessAddress.one() %}
                {% if businessAddress %}
                    <div class="flex items-start space-x-3">
                        <svg class="w-6 h-6 text-gray-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Address</h3>
                            <p class="text-gray-700 font-medium">{{ businessAddress.addressLine1 }}</p>
                            {% if businessAddress.addressLine2 %}
                                <p class="text-gray-700">{{ businessAddress.addressLine2 }}</p>
                            {% endif %}
                            <p class="text-gray-700">{{ businessAddress.locality }}, {{ businessAddress.administrativeArea }} {{ businessAddress.postalCode }}</p>
                        </div>
                    </div>
                {% endif %}

                <!-- Phone -->
                {% if attribute(entry, 'businessPhone')|length %}
                    <div class="flex items-start space-x-3">
                        <svg class="w-6 h-6 text-gray-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Phone</h3>
                            <a href="tel:{{ attribute(entry, 'businessPhone') }}" class="inline-flex items-center px-3 py-1 text-sm font-medium bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">
                                <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                                {{ attribute(entry, 'businessPhone') }}
                            </a>
                        </div>
                    </div>
                {% endif %}



                <!-- Website -->
                {% if attribute(entry, 'businessWebsite')|length %}
                    <div class="flex items-start space-x-3">
                        <svg class="w-6 h-6 text-gray-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Website</h3>
                            <a href="{{ attribute(entry, 'businessWebsite') }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-3 py-1 text-sm font-medium bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">
                                Visit Site
                                <svg class="w-4 h-4 ml-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endif %}

                <!-- Category -->
                {% set businessCategories = entry.category.all() %}
                {% if businessCategories|length > 0 %}
                    <div class="flex items-start space-x-3">
                        <svg class="w-6 h-6 text-gray-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Category</h3>
                            <div class="flex flex-wrap gap-2">
                                {% for category in businessCategories %}
                                    <a href="/category/{{ category.slug }}" class="inline-flex items-center px-3 py-1 text-sm font-medium bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">
                                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                        </svg>
                                        {{ category.title }}
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}

            </div>

            <!-- Business Description -->
            {% if entry.businessDescription|length %}
                <div class="mt-6 pt-6 border-t border-gray-200">
                    <div class="prose max-w-none text-gray-700">
                        {{ entry.businessDescription|raw }}
                    </div>
                </div>
            {% endif %}

            <!-- Special Offer -->
                {% if entry.oneSpecial|length %}
                    {# Check if oneSpecial has been redeemed this month #}
                    {% set currentMonth = 'now'|date('n') - 1 %}
                    {% set oneSpecialRedeemed = false %}
                    {% if currentUser %}
                        {% set oneSpecialToken = craft.app.db.createCommand("
                            SELECT usedAt
                            FROM {{%redeem_tokens}}
                            WHERE userId = :userId
                            AND businessId = :businessId
                            AND redeemType = 'oneSpecial'
                            AND monthIndex = :currentMonth
                            AND usedAt IS NOT NULL
                            LIMIT 1
                        ")
                        .bindValue(':userId', currentUser.id)
                        .bindValue(':businessId', entry.id)
                        .bindValue(':currentMonth', currentMonth)
                        .queryOne() %}
                        {% set oneSpecialRedeemed = oneSpecialToken ? true : false %}
                    {% endif %}

                    <div class="mt-6 pt-6 border-t border-gray-200">
                        <div class="flex items-start space-x-3">
                            <svg class="w-6 h-6 text-red-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                            </svg>
                            <div class="w-full">
                                <h3 class="font-semibold text-gray-900 mb-1">Member Only Specials!</h3>
                                <div class="flex flex-col gap-2">
                                    <div class="flex items-center justify-between">
                                        <p class="text-gray-700">{{ entry.oneSpecial }}</p>
                                        {% if currentUser %}
                                            {% if oneSpecialRedeemed %}
                                                <button disabled class="inline-flex items-center px-3 py-1 text-sm font-medium bg-gray-400 text-white rounded-md cursor-not-allowed opacity-50 ml-4" title="Already redeemed this month">
                                                    Redeemed
                                                </button>
                                            {% else %}
                                                <form method="post" class="inline-block ml-4" data-redeem-form>
                                                {{ csrfInput() }}
                                                {{ actionInput('redeem/default/generate-redeem-token') }}
                                                {{ redirectInput(entry.url) }}
                                                <input type="hidden" name="businessId" value="{{ entry.id }}">
                                                <input type="hidden" name="redeemType" value="oneSpecial">
                                                <input type="hidden" name="monthIndex" value="{{ currentMonth }}">
                                                <button type="submit" class="inline-flex items-center px-3 py-1 text-sm font-medium bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                                                    Redeem
                                                </button>
                                            </form>
                                        {% endif %}
                                    {% else %}
                                        <a href="/register" class="inline-flex items-center px-3 py-1 text-sm font-medium bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors ml-4">
                                            Sign Up to Redeem
                                        </a>
                                    {% endif %}
                                    </div>
                                    {% if currentUser and oneSpecialRedeemed %}
                                        {% set nextMonth = ('now'|date_modify('+1 month'))|date('F') %}
                                        <p class="text-sm text-gray-500 italic">Available again in {{ nextMonth }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

            <!-- Monthly Specials -->
            {% set validMonthlySpecials = [] %}
            {% for row in entry.monthlySpecials %}
                {% if row.month|length and row.special|length %}
                    {% set validMonthlySpecials = validMonthlySpecials|merge([row]) %}
                {% endif %}
            {% endfor %}

            {% if validMonthlySpecials|length %}
                {% set allSame = true %}
                {% set firstSpecial = validMonthlySpecials[0].special %}
                {% for row in validMonthlySpecials %}
                    {% if row.special != firstSpecial %}
                        {% set allSame = false %}
                    {% endif %}
                {% endfor %}

                {# Get user's redeemed monthly tokens for this business #}
                {% set redeemedMonths = {} %}
                {% if currentUser %}
                    {% set userRedeemedTokens = craft.app.db.createCommand("
                        SELECT monthIndex, usedAt
                        FROM {{%redeem_tokens}}
                        WHERE userId = :userId
                        AND businessId = :businessId
                        AND redeemType = 'monthlySpecial'
                    ")
                    .bindValue(':userId', currentUser.id)
                    .bindValue(':businessId', entry.id)
                    .queryAll() %}

                    {% for token in userRedeemedTokens %}
                        {% set key = 'month_' ~ token.monthIndex %}
                        {% set redeemedMonths = redeemedMonths|merge({(key): token.usedAt}) %}
                    {% endfor %}
                {% endif %}



                {% set months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'] %}

                {# Get current month for time-based availability #}
                {% set currentMonthIndex = 'now'|date('n') - 1 %}

                <div class="mt-6 mb-20 pt-6 border-t border-gray-200">
                    <div class="flex items-start space-x-3 mb-4">
                        <svg class="w-6 h-6 text-red-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                        </svg>
                        <h3 class="font-semibold text-gray-900">Member Only Monthly Specials</h3>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Month</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Special</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for month in months %}
                                    {% set monthIndex = loop.index0 %}
                                    {% set monthData = validMonthlySpecials[monthIndex] ?? null %}
                                    {% if allSame %}
                                        {% set displaySpecial = firstSpecial %}
                                    {% else %}
                                        {% set displaySpecial = monthData ? monthData.special : firstSpecial %}
                                    {% endif %}
                                    {% set isRedeemed = redeemedMonths['month_' ~ monthIndex] is defined %}
                                    {% set isFutureMonth = monthIndex > currentMonthIndex %}
                                    {% set isPastMonth = monthIndex < currentMonthIndex %}
                                    <tr class="{% if loop.index is odd %}bg-white{% else %}bg-gray-50{% endif %} {% if isRedeemed or isFutureMonth %}opacity-60{% endif %}">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ month }}</td>
                                        <td class="px-6 py-4 text-sm text-gray-900">
                                            {{ displaySpecial }}
                                            {% if isRedeemed %}
                                                <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                                    </svg>
                                                    Redeemed
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                                            {% if currentUser %}
                                                {% if isRedeemed %}
                                                    <button disabled class="inline-flex items-center px-3 py-1 text-sm font-medium bg-gray-400 text-white rounded-md cursor-not-allowed opacity-50" title="Already redeemed on {{ redeemedMonths['month_' ~ monthIndex]|date('M j, Y') }}">
                                                        Redeemed
                                                    </button>
                                                {% elseif isFutureMonth %}
                                                    <button disabled class="inline-flex items-center px-3 py-1 text-sm font-medium bg-blue-600 text-white rounded-md cursor-not-allowed opacity-75" title="Available in {{ month }}">
                                                        Available {{ month }}
                                                    </button>
                                                {% elseif isPastMonth %}
                                                    <button disabled class="inline-flex items-center px-3 py-1 text-sm font-medium bg-gray-300 text-gray-600 rounded-md cursor-not-allowed opacity-50" title="Expired - not redeemed in {{ month }}">
                                                        Expired
                                                    </button>
                                                {% else %}
                                                    <form method="post" class="inline-block" data-redeem-form>
                                                        {{ csrfInput() }}
                                                        {{ actionInput('redeem/default/generate-redeem-token') }}
                                                        {{ redirectInput(entry.url) }}
                                                        <input type="hidden" name="businessId" value="{{ entry.id }}">
                                                        <input type="hidden" name="redeemType" value="monthlySpecial">
                                                        <input type="hidden" name="monthIndex" value="{{ monthIndex }}">
                                                        <input type="hidden" name="monthData" value="{{ month ~ '|' ~ displaySpecial }}">
                                                        <button type="submit" class="inline-flex items-center px-3 py-1 text-sm font-medium bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                                                            Redeem
                                                        </button>
                                                    </form>
                                                {% endif %}
                                            {% else %}
                                                <a href="/register" class="inline-flex items-center px-3 py-1 text-sm font-medium bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors">
                                                    Sign Up
                                                </a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}

            <!-- Back to Businesses List -->
            <div class="mt-8 pt-6 border-t border-gray-200">
                <a href="/business" class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Back to All Businesses
                </a>
            </div>
        </div>
    </div>
</div>

<style>
/* Prevent layout shifts during image loading */
img {
    max-width: 100%;
    height: auto;
}

/* Ensure consistent spacing */
.business-hero-image {
    min-height: 16rem; /* h-64 */
}

@media (min-width: 768px) {
    .business-hero-image {
        min-height: 24rem; /* md:h-96 */
    }
}


</style>

<script>
// Enhance redeem form submissions
document.addEventListener('DOMContentLoaded', function() {
    const redeemForms = document.querySelectorAll('form[data-redeem-form]');

    redeemForms.forEach(form => {
        form.addEventListener('submit', function(e) {
            const button = form.querySelector('button[type="submit"]');

            // Disable button to prevent double submission
            if (button) {
                button.disabled = true;
                button.innerHTML = '<svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Generating...';

                // Re-enable button after 5 seconds in case of error
                setTimeout(() => {
                    button.disabled = false;
                    button.innerHTML = 'Redeem';
                }, 5000);
            }
        });
    });
});
</script>
{% endblock %}
