{% extends "_layouts/base.twig" %}

{% block title %}
    {% if entry %}
        Redeem Special - {{ entry.title }} - {{ parent() }}
    {% else %}
        Redemption Error - {{ parent() }}
    {% endif %}
{% endblock %}

{% block content %}
{% if redeemToken and entry and not error %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Redeem Header -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
        <!-- Business Header Section -->
        <div class="bg-gradient-to-r from-green-50 to-blue-50 p-6 md:p-8 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">{{ entry.title }}</h1>
                    <p class="text-gray-600">Redeem Your Special Offer</p>
                </div>
                <div class="flex-shrink-0">
                    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Special Offer Details -->
        <div class="p-6 md:p-8">
            {% if redeemType == 'oneSpecial' and entry.oneSpecial|length %}
                <!-- One-Time Special -->
                <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-8">
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4 flex-grow">
                            <h2 class="text-xl font-bold text-green-900 mb-2">Special Offer</h2>
                            <p class="text-green-800 text-lg">{{ entry.oneSpecial }}</p>
                        </div>
                    </div>
                </div>

            {% elseif redeemType == 'monthlySpecial' and monthlySpecialData %}
                <!-- Monthly Special -->
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-4 flex-grow">
                            <h2 class="text-xl font-bold text-blue-900 mb-2">{{ monthlySpecialData.month }} Special</h2>
                            <p class="text-blue-800 text-lg">{{ monthlySpecialData.special }}</p>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Redemption Instructions -->
            <div class="bg-gradient-to-br from-blue-50 to-green-50 border-2 border-blue-200 rounded-lg p-6 mb-8">
                <div class="flex items-start mb-4">
                    <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                        <h3 class="text-xl font-bold text-gray-900 mb-2">How to Redeem Your Offer</h3>
                        <p class="text-gray-700 text-sm">Show your QR code below to the business staff at {{ entry.title }}. Once scanned, your offer will be instantly redeemed!</p>
                    </div>
                </div>

                <div class="bg-white bg-opacity-60 rounded-lg p-4 space-y-3">
                    <div class="flex items-start">
                        <span class="inline-flex items-center justify-center w-7 h-7 bg-blue-600 rounded-full text-white text-sm font-bold mr-3 mt-0.5 flex-shrink-0">1</span>
                        <div class="flex-grow">
                            <p class="text-gray-900 font-medium">Visit {{ entry.title }}</p>
                            <p class="text-gray-600 text-sm">Must be redeemed at the business location</p>
                        </div>
                    </div>
                    <div class="flex items-start">
                        <span class="inline-flex items-center justify-center w-7 h-7 bg-blue-600 rounded-full text-white text-sm font-bold mr-3 mt-0.5 flex-shrink-0">2</span>
                        <div class="flex-grow">
                            <p class="text-gray-900 font-medium">Show your redemption code to staff</p>
                            <p class="text-gray-600 text-sm">Let them see the offer - no entering code needed yet</p>
                        </div>
                    </div>
                    <div class="flex items-start">
                        <span class="inline-flex items-center justify-center w-7 h-7 bg-blue-600 rounded-full text-white text-sm font-bold mr-3 mt-0.5 flex-shrink-0">3</span>
                        <div class="flex-grow">
                            <p class="text-gray-900 font-medium">Click the redemption button at checkout</p>
                            <p class="text-gray-600 text-sm">Cannot be combined with other offers - expires once clicked</p>
                        </div>
                    </div>
                </div>

                <div class="mt-4 bg-amber-50 border border-amber-200 rounded-lg p-3">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-amber-600 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                        <p class="text-amber-900 text-sm font-medium">Remember: Once clicked, the redemption code is instantly redeemed and cannot be used again.</p>
                    </div>
                </div>
            </div>

            <!-- Redemption Code Button -->
            <div class="bg-gradient-to-br from-green-50 to-blue-50 border-2 border-green-300 rounded-lg p-8 mb-8 text-center">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">Your Redemption Code</h3>

                <a href="/redeem/validate?token={{ redeemToken }}"
                   class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 px-8 py-6 mb-6">
                    <div class="text-xs uppercase tracking-wider mb-2 text-green-100">Click to Redeem</div>
                    <div class="text-xl font-mono tracking-wide">{{ redeemToken|slice(0, 16)|upper }}...</div>
                </a>

                <div class="text-sm text-green-800 font-medium mb-3">
                    ⚠️ This code can only be used once
                </div>
                <div class="text-sm text-gray-600 mb-2">
                    Valid for: {{ currentUser.firstName ~ ' ' ~ currentUser.lastName }} ({{ currentUser.email }})
                </div>

                {% if tokenRecord is defined and tokenRecord.usedAt %}
                    <div class="mt-4 p-4 bg-red-50 border-2 border-red-300 rounded-lg">
                        <div class="text-red-800 font-bold">
                            ✓ This code has already been redeemed on {{ tokenRecord.usedAt|date('F j, Y \\a\\t g:i A') }}
                        </div>
                    </div>
                {% endif %}
            </div>

            <!-- Business Contact Information -->
            <div class="bg-white border border-gray-200 rounded-lg p-6 mb-8">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Business Details</h3>
                <div class="grid md:grid-cols-2 gap-6">
                    <!-- Address -->
                    {% set businessAddress = entry.businessAddress.one() %}
                    {% if businessAddress %}
                        <div class="flex items-start space-x-3">
                            <svg class="w-6 h-6 text-gray-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <div>
                                <h4 class="font-semibold text-gray-900 mb-1">Address</h4>
                                <p class="text-gray-700">{{ businessAddress.addressLine1 }}</p>
                                {% if businessAddress.addressLine2 %}
                                    <p class="text-gray-700">{{ businessAddress.addressLine2 }}</p>
                                {% endif %}
                                <p class="text-gray-700">{{ businessAddress.locality }}, {{ businessAddress.administrativeArea }} {{ businessAddress.postalCode }}</p>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Phone -->
                    {% if attribute(entry, 'businessPhone')|length %}
                        <div class="flex items-start space-x-3">
                            <svg class="w-5 h-5 text-gray-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                            <div>
                                <h4 class="font-medium text-gray-900">Phone</h4>
                                <a href="tel:{{ attribute(entry, 'businessPhone')|replace({' ': '', '(': '', ')': '', '-': ''}) }}"
                                   class="text-blue-600 hover:text-blue-800 transition-colors">
                                    {{ attribute(entry, 'businessPhone') }}
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>



            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="{{ entry.url }}"
                   class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Back to {{ entry.title }}
                </a>

                <a href="/business"
                   class="inline-flex items-center px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    Browse All Businesses
                </a>
            </div>
        </div>
    </div>
</div>

{% elseif error is defined or not redeemToken %}
    <!-- Error State -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center">
            <svg class="mx-auto w-12 h-12 text-red-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h2 class="text-xl font-bold text-red-900 mb-2">
                {% if error is defined %}{{ error }}{% else %}Invalid or Expired Redemption Link{% endif %}
            </h2>
            <p class="text-red-800 mb-4">
                {% if error is defined %}
                    Please try generating a new redemption link from the business page.
                {% else %}
                    This redemption link is either invalid, has expired, or has already been used.
                {% endif %}
            </p>
            <a href="/business" class="inline-flex items-center px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-colors">
                Browse Businesses
            </a>
        </div>
    </div>
{% endif %}
{% endblock %}
