{% extends "_layouts/base.twig" %}

{% set title = "My Account" %}

{% block content %}
{% requireLogin %}

<div class="max-w-4xl mx-auto mt-8 mb-16">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <!-- Account Header -->
        {% set isBusiness = currentUser.isInGroup('business') %}
        <div class="bg-gradient-to-r from-{{ isBusiness ? 'green' : 'blue' }}-600 to-{{ isBusiness ? 'green' : 'blue' }}-700 px-6 py-8">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <div class="bg-white rounded-full p-1">
                        <div class="w-16 h-16 bg-gray-300 rounded-full flex items-center justify-center">
                            {% if isBusiness %}
                                <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                            {% else %}
                                <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            {% endif %}
                        </div>
                    </div>
                    <div class="ml-6">
                        <div class="flex items-center gap-3 mb-1">
                            <h1 class="text-2xl font-bold text-white">
                                {% if currentUser.firstName or currentUser.lastName %}
                                    {{ currentUser.firstName ~ ' ' ~ currentUser.lastName }}
                                {% else %}
                                    {{ currentUser.username }}
                                {% endif %}
                            </h1>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-white/20 text-white border border-white/30">
                                {% if isBusiness %}
                                    <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                    </svg>
                                    Business Account
                                {% else %}
                                    <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    Personal Account
                                {% endif %}
                            </span>
                        </div>
                        <p class="text-{{ isBusiness ? 'green' : 'blue' }}-100">{{ currentUser.email }}</p>
                        <p class="text-{{ isBusiness ? 'green' : 'blue' }}-200 text-sm">Member since {{ currentUser.dateCreated|date('F Y') }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Navigation -->
        <div class="border-b border-gray-200">
            <nav class="px-6" x-data="{ activeTab: 'overview' }">
                <div class="flex space-x-8">
                    <button @click="activeTab = 'overview'"
                            :class="activeTab === 'overview' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
                            class="py-4 px-1 border-b-2 font-medium text-sm transition-colors">
                        Overview
                    </button>
                    <button @click="activeTab = 'profile'"
                            :class="activeTab === 'profile' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
                            class="py-4 px-1 border-b-2 font-medium text-sm transition-colors">
                        Profile
                    </button>
                    <button @click="activeTab = 'settings'"
                            :class="activeTab === 'settings' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
                            class="py-4 px-1 border-b-2 font-medium text-sm transition-colors">
                        Settings
                    </button>
                </div>
            </nav>
        </div>

        <!-- Account Content -->
        <div class="p-6" x-data="{ activeTab: 'overview' }">
            <!-- Overview Tab -->
            <div x-show="activeTab === 'overview'" x-transition>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                    <!-- Account Status Card -->
                    <div class="bg-green-50 border border-green-200 rounded-lg p-6">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-semibold text-green-900">Account Active</h3>
                                <p class="text-green-700">Your account is in good standing</p>
                            </div>
                        </div>
                    </div>

                    <!-- Profile Completion Card -->
                    <div class="bg-{{ isBusiness ? 'green' : 'blue' }}-50 border border-{{ isBusiness ? 'green' : 'blue' }}-200 rounded-lg p-6">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="w-8 h-8 text-{{ isBusiness ? 'green' : 'blue' }}-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-semibold {{ isBusiness ? 'text-green-900' : 'text-blue-900' }}">{{ isBusiness ? 'Business Profile' : 'Profile' }}</h3>
                                <p class="{{ isBusiness ? 'text-green-700' : 'text-blue-700' }}">{{ isBusiness ? 'Manage your business information' : 'Complete your profile info' }}</p>
                                <a href="{% if isBusiness %}/business/profile{% else %}/account/profile{% endif %}" class="text-{{ isBusiness ? 'green' : 'blue' }}-600 hover:text-{{ isBusiness ? 'green' : 'blue' }}-500 text-sm font-medium">Update →</a>
                            </div>
                        </div>
                    </div>

                    <!-- Last Login Card -->
                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-semibold text-gray-900">Last Login</h3>
                                <p class="text-gray-700">{{ currentUser.lastLoginDate ? currentUser.lastLoginDate|date('M j, Y g:i A') : 'First time!' }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Redemptions -->
                {% set recentTokens = craft.app.db.createCommand('SELECT * FROM {{%redeem_tokens}} WHERE userId = :userId ORDER BY dateCreated DESC LIMIT 5')
                    .bindValue(':userId', currentUser.id)
                    .queryAll() %}

                {% if recentTokens|length > 0 %}
                    <div class="border-t border-gray-200 pt-6 mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-lg font-semibold text-gray-900">Recent Redemptions</h2>
                            <a href="/account/redeem-history" class="text-sm text-blue-600 hover:text-blue-800 font-medium">View All →</a>
                        </div>
                        <div class="space-y-3">
                            {% for tokenData in recentTokens %}
                                {% set business = craft.entries.id(tokenData.businessId).one() %}
                                {% set isUsed = tokenData.usedAt is not null %}

                                <div class="bg-gray-50 rounded-lg p-4 flex items-center justify-between">
                                    <div class="flex-grow">
                                        <div class="flex items-center">
                                            <h3 class="font-medium text-gray-900">
                                                {% if business %}
                                                    {{ business.title }}
                                                {% else %}
                                                    Business (Unavailable)
                                                {% endif %}
                                            </h3>
                                            <span class="ml-3">
                                                {% if isUsed %}
                                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                                        </svg>
                                                        Redeemed
                                                    </span>
                                                {% else %}
                                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                                        </svg>
                                                        Active
                                                    </span>
                                                {% endif %}
                                            </span>
                                        </div>
                                        <p class="text-sm text-gray-600 mt-1">{{ tokenData.dateCreated|date('M j, Y g:i A') }}</p>
                                    </div>
                                    {% if not isUsed and business %}
                                        <a href="{{ business.url }}" class="ml-4 text-sm text-blue-600 hover:text-blue-800 font-medium whitespace-nowrap">View Code →</a>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <!-- Quick Actions -->
                <div class="border-t border-gray-200 pt-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        <a href="/account/profile" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                            <svg class="w-6 h-6 text-gray-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            <span class="font-medium text-gray-900">Edit Profile</span>
                        </a>

                        <a href="/business" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                            <svg class="w-6 h-6 text-gray-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            <span class="font-medium text-gray-900">Browse Businesses</span>
                        </a>

                        <a href="/account/redeem-history" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                            <svg class="w-6 h-6 text-gray-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                            </svg>
                            <span class="font-medium text-gray-900">Redemption History</span>
                        </a>

                        {% if currentUser.admin %}
                        <a href="/manage-redemptions" class="flex items-center p-4 bg-red-50 border border-red-200 rounded-lg hover:bg-red-100 transition-colors">
                            <svg class="w-6 h-6 text-red-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                            </svg>
                            <span class="font-medium text-red-900">Manage Redemptions (Admin)</span>
                        </a>
                        {% endif %}

                        <a href="/logout" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                            <svg class="w-6 h-6 text-gray-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                            </svg>
                            <span class="font-medium text-gray-900">Sign Out</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Profile Tab -->
            <div x-show="activeTab === 'profile'" x-transition>
                <div class="max-w-2xl">
                    <h2 class="text-xl font-semibold text-gray-900 mb-6">Profile Information</h2>

                    <div class="bg-gray-50 rounded-lg p-6 space-y-4">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">First Name</label>
                                <p class="mt-1 text-gray-900">{{ currentUser.firstName ?: 'Not provided' }}</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Last Name</label>
                                <p class="mt-1 text-gray-900">{{ currentUser.lastName ?: 'Not provided' }}</p>
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Email Address</label>
                            <p class="mt-1 text-gray-900">{{ currentUser.email }}</p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Username</label>
                            <p class="mt-1 text-gray-900">{{ currentUser.username }}</p>
                        </div>

                        <div class="pt-4 border-t border-gray-200">
                            <a href="/account/profile" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Edit Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Settings Tab -->
            <div x-show="activeTab === 'settings'" x-transition>
                <div class="max-w-2xl">
                    <h2 class="text-xl font-semibold text-gray-900 mb-6">Account Settings</h2>

                    <div class="space-y-6">
                        <!-- Password Section -->
                        <div class="bg-gray-50 rounded-lg p-6">
                            <h3 class="text-lg font-medium text-gray-900 mb-4">Password & Security</h3>
                            <p class="text-gray-600 mb-4">Keep your account secure by using a strong password.</p>
                            <button class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                                </svg>
                                Change Password
                            </button>
                        </div>

                        <!-- Account Actions -->
                        <div class="bg-red-50 border border-red-200 rounded-lg p-6">
                            <h3 class="text-lg font-medium text-red-900 mb-4">Danger Zone</h3>
                            <p class="text-red-700 mb-4">These actions cannot be undone. Please be careful.</p>
                            <button class="inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                                Delete Account
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
