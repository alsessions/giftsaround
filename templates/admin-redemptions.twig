{% extends "_layouts/base.twig" %}
{% block title %}Manage Redemptions - Admin{% endblock %}
{% block content %}
{% requireLogin %}

{# Check if user is admin #}
{% if not currentUser.admin %}
    {% redirect 'account' %}
{% endif %}

{# Handle form submission for clearing history #}
{% set justCleared = false %}
{% if craft.app.request.isPost and craft.app.request.getBodyParam('clear-user-id') %}
    {% set userId = craft.app.request.getBodyParam('clear-user-id') %}
    {% set user = craft.users.id(userId).one() %}

    {% if user %}
        {% set deleted = craft.app.db.createCommand()
            .delete('{{%redeem_tokens}}', {'userId': userId})
            .execute() %}
        {% set justCleared = true %}
        {% set clearedUser = user.fullName %}
        {% set clearedCount = deleted %}
    {% endif %}
{% endif %}

{% set users = craft.users.all() %}
{% set userData = [] %}

{% for user in users %}
    {% set totalTokens = craft.app.db.createCommand('SELECT COUNT(*) FROM {{%redeem_tokens}} WHERE userId = :userId').bindValue(':userId', user.id).queryScalar() %}

    {% if totalTokens > 0 %}
        {% set usedTokens = craft.app.db.createCommand('SELECT COUNT(*) FROM {{%redeem_tokens}} WHERE userId = :userId AND usedAt IS NOT NULL').bindValue(':userId', user.id).queryScalar() %}
        {% set activeTokens = craft.app.db.createCommand('SELECT COUNT(*) FROM {{%redeem_tokens}} WHERE userId = :userId AND usedAt IS NULL').bindValue(':userId', user.id).queryScalar() %}

        {% set userData = userData|merge([{
            'user': user,
            'total': totalTokens,
            'used': usedTokens,
            'active': activeTokens
        }]) %}
    {% endif %}
{% endfor %}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-red-600 to-orange-600 p-6 md:p-8">
            <h1 class="text-3xl font-bold text-white mb-2">Manage Redemptions</h1>
            <p class="text-red-100">View and manage user redemption history</p>
        </div>

        {% if justCleared %}
            <div class="m-6 bg-green-50 border border-green-200 rounded-lg p-4">
                <div class="flex">
                    <svg class="h-5 w-5 text-green-400 mr-3" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <p class="text-sm text-green-800">Cleared {{ clearedCount }} redemption(s) for {{ clearedUser }}</p>
                </div>
            </div>
        {% endif %}

        <div class="p-6 md:p-8">
            {% if userData|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    {% set totalUsers = userData|length %}
                    {% set totalRedemptions = userData|reduce((carry, item) => carry + item.total, 0) %}
                    {% set totalUsed = userData|reduce((carry, item) => carry + item.used, 0) %}

                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <div class="flex items-center">
                            <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                            </svg>
                            <div>
                                <p class="text-2xl font-bold text-blue-900">{{ totalUsers }}</p>
                                <p class="text-blue-700 text-sm">Users with Redemptions</p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                        <div class="flex items-center">
                            <svg class="w-8 h-8 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <div>
                                <p class="text-2xl font-bold text-green-900">{{ totalUsed }}</p>
                                <p class="text-green-700 text-sm">Total Redeemed</p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
                        <div class="flex items-center">
                            <svg class="w-8 h-8 text-amber-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                            </svg>
                            <div>
                                <p class="text-2xl font-bold text-amber-900">{{ totalRedemptions }}</p>
                                <p class="text-amber-700 text-sm">Total Generated</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 rounded-lg border border-gray-200 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-100">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">User</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Total</th>
                                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Redeemed</th>
                                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Active</th>
                                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for item in userData %}
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="h-10 w-10 bg-blue-100 rounded-full flex items-center justify-center">
                                                    <span class="text-blue-600 font-semibold">{{ item.user.fullName|slice(0, 1)|upper }}</span>
                                                </div>
                                                <div class="ml-4">
                                                    <div class="text-sm font-medium text-gray-900">{{ item.user.fullName }}</div>
                                                    <div class="text-xs text-gray-500">ID: {{ item.user.id }}</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ item.user.email }}</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-center">
                                            <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">{{ item.total }}</span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-center">
                                            <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">{{ item.used }}</span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-center">
                                            <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">{{ item.active }}</span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-center">
                                            <form method="post" action="/manage-redemptions" onsubmit="return confirm('Clear all {{ item.total }} redemptions for {{ item.user.fullName }}? This cannot be undone.');" class="inline-block">
                                                {{ csrfInput() }}
                                                <input type="hidden" name="clear-user-id" value="{{ item.user.id }}">
                                                <button type="submit" class="inline-flex items-center px-3 py-1.5 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-md transition-colors">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                    </svg>
                                                    Clear History
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% else %}
                <div class="text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">No redemptions found</h3>
                    <p class="mt-1 text-sm text-gray-500">No users have generated any redemption codes yet.</p>
                </div>
            {% endif %}

            <div class="mt-8 pt-6 border-t border-gray-200">
                <a href="/account" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back to Account
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
