{% extends "_layouts/base.twig" %}

{% block title %}QR Code Test - {{ parent() }}{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-6">QR Code Generation Test</h1>

        <!-- Test 1: Simple QR Code -->
        <div class="mb-8 border-b border-gray-200 pb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Test 1: Simple Test QR</h2>
            <div class="bg-gray-50 rounded-lg p-6 text-center">
                <img src="/redeem/test-qr" alt="Test QR Code" class="w-64 h-64 mx-auto border border-gray-300 rounded">
                <p class="text-sm text-gray-600 mt-4">Should show a QR code linking to example.com/test</p>
            </div>
        </div>

        <!-- Test 2: With Token -->
        {% if currentUser %}
            {% set testTokens = craft.app.db.createCommand('SELECT * FROM {{%redeem_tokens}} WHERE userId = :userId ORDER BY dateCreated DESC LIMIT 1')
                .bindValue(':userId', currentUser.id)
                .queryOne() %}

            {% if testTokens %}
                <div class="mb-8 border-b border-gray-200 pb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Test 2: Real Redemption QR Code</h2>
                    <div class="bg-gray-50 rounded-lg p-6 text-center">
                        <img src="/redeem/qr-code?redeemToken={{ testTokens.token }}" alt="Redemption QR Code" class="w-64 h-64 mx-auto border border-gray-300 rounded">
                        <p class="text-sm text-gray-600 mt-4">Latest redemption token</p>
                        <p class="text-xs text-gray-500 font-mono mt-2">{{ testTokens.token|slice(0, 8)|upper }}...{{ testTokens.token|slice(-8)|upper }}</p>
                        <div class="mt-4 space-x-4">
                            <a href="/redeem/validate?redeemToken={{ testTokens.token }}" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                                Test Validation Page
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="mb-8 border-b border-gray-200 pb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Test 2: Real Redemption QR Code</h2>
                    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
                        <p class="text-yellow-800">No redemption tokens found. Generate one first:</p>
                        <a href="/business" class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                            Browse Businesses
                        </a>
                    </div>
                </div>
            {% endif %}
        {% else %}
            <div class="mb-8 border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Test 2: Real Redemption QR Code</h2>
                <div class="bg-gray-50 rounded-lg p-6">
                    <p class="text-gray-600">Please <a href="/login" class="text-blue-600 hover:text-blue-800 font-medium">login</a> to test with real redemption tokens.</p>
                </div>
            </div>
        {% endif %}

        <!-- Status Indicators -->
        <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Status Check</h2>
            <div class="space-y-3">
                <div class="flex items-center justify-between bg-green-50 border border-green-200 rounded-lg p-4">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 text-green-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="font-medium text-green-900">QR Code Routes</span>
                    </div>
                    <span class="text-green-700 text-sm">Configured</span>
                </div>

                <div class="flex items-center justify-between bg-green-50 border border-green-200 rounded-lg p-4">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 text-green-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="font-medium text-green-900">endroid/qr-code Package</span>
                    </div>
                    <span class="text-green-700 text-sm">Installed</span>
                </div>

                <div class="flex items-center justify-between bg-green-50 border border-green-200 rounded-lg p-4">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 text-green-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="font-medium text-green-900">Template Integration</span>
                    </div>
                    <span class="text-green-700 text-sm">Active</span>
                </div>
            </div>
        </div>

        <!-- Quick Links -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
            <h3 class="font-semibold text-blue-900 mb-3">Quick Links</h3>
            <div class="space-y-2">
                <a href="/business" class="block text-blue-700 hover:text-blue-900 transition-colors">→ Browse Businesses</a>
                <a href="/account/redeem-history" class="block text-blue-700 hover:text-blue-900 transition-colors">→ Redemption History</a>
                <a href="/account" class="block text-blue-700 hover:text-blue-900 transition-colors">→ My Account</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
