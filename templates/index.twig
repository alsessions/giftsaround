{% extends "_layouts/base.twig" %}

{% block title %}Welcome - {{ parent() }}{% endblock %}

{% block content %}
<!-- Hero Section -->
<div class="bg-gradient-to-br from-gray-900 to-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
        <div class="text-center">
            <h1 class="text-4xl md:text-6xl font-bold text-green-400 mb-6">
                Welcome to Gifts Around
            </h1>
            <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-8">
                Discover amazing local deals for just $19.99 a year! Join thousands of members saving money at their favorite local businesses while supporting their community.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="#membership" class="inline-flex items-center px-6 py-3 bg-green-500 text-white font-medium rounded-lg hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2 focus:ring-offset-gray-900 transition-colors">
                    Join for $19.99/Year
                    <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
                <a href="/business" class="inline-flex items-center px-6 py-3 bg-gray-800 text-blue-400 border border-blue-500 font-medium rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-gray-900 transition-colors">
                    View Businesses
