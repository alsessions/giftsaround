        </div>

        <!-- Resources Grid -->
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <!-- Food & Beverage -->
            <div class="bg-gray-900 border border-gray-800 rounded-lg p-6 hover:shadow-xl hover:shadow-blue-500/10 transition-shadow">
                <a href="/category/food-beverage" class="flex items-center mb-4 group">
                    <div class="bg-blue-900/50 rounded-lg p-2">
