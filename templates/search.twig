{% extends "_layouts/base.twig" %}

{% set searchQuery = craft.app.request.getQueryParam('q') %}
{% set cleanQuery = searchQuery|trim %}

{% block title %}Search Results{% if cleanQuery %} for "{{ cleanQuery }}"{% endif %} - {{ parent() }}{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Search Header -->
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-green-400 mb-4">Search Results</h1>
        {% if cleanQuery %}
            <p class="text-xl text-gray-400">Searching for: <span class="text-blue-400 font-medium">"{{ cleanQuery }}"</span></p>
        {% endif %}
    </div>

    <!-- Search Form -->
    <div class="mb-12">
        <form action="/search" method="get" class="max-w-2xl">
            <div class="relative">
                <input type="text" name="q" value="{{ cleanQuery }}" placeholder="Enter search terms..." class="w-full px-6 py-4 bg-gray-900 text-gray-100 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-lg" autofocus>
                <button type="submit" class="absolute right-3 top-1/2 -translate-y-1/2 px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors font-medium">Search</button>
            </div>
        </form>
    </div>

    {% if cleanQuery %}
        {% set businessResults = craft.entries()
            .section('business')
            .search(cleanQuery)
            .orderBy('score')
            .limit(50)
            .all() %}

        {% set categoryResults = craft.categories()
            .group('category')
            .search(cleanQuery)
            .orderBy('score')
            .limit(20)
            .all() %}

        {% set totalResults = businessResults|length + categoryResults|length %}

        {% if totalResults > 0 %}
            <!-- Results Count -->
            <div class="mb-6">
                <p class="text-gray-400">Found <span class="text-green-400 font-semibold">{{ totalResults }}</span> result{{ totalResults != 1 ? 's' : '' }}
                    <span class="text-gray-500">
                        ({{ businessResults|length }} business{{ businessResults|length != 1 ? 'es' : '' }}{% if categoryResults|length %}, {{ categoryResults|length }} categor{{ categoryResults|length != 1 ? 'ies' : 'y' }}{% endif %})
                    </span>
                </p>
            </div>

            <!-- Category Results -->
            {% if categoryResults|length %}
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-blue-400 mb-4">Categories</h2>
                    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
                        {% for category in categoryResults %}
                            <a href="/category/{{ category.slug }}" class="bg-gray-900 border border-gray-800 rounded-lg p-5 hover:shadow-xl hover:shadow-blue-500/10 hover:border-blue-700 transition-all duration-300 group">
                                <div class="flex items-start justify-between">
                                    <div class="flex-1">
                                        <div class="flex items-center mb-2">
                                            <svg class="w-5 h-5 text-blue-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                            </svg>
                                            <h3 class="text-lg font-bold text-gray-100 group-hover:text-blue-400 transition-colors">{{ category.title }}</h3>
                                        </div>
                                        {% set businessCount = craft.entries().section('business').relatedTo(category).count() %}
                                        <p class="text-sm text-gray-400">{{ businessCount }} business{{ businessCount != 1 ? 'es' : '' }}</p>
                                        {% if category.searchScore %}
                                            <p class="text-xs text-gray-600 mt-1">Score: {{ category.searchScore|number_format(2) }}</p>
                                        {% endif %}
                                    </div>
                                    <svg class="w-5 h-5 text-gray-600 group-hover:text-blue-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            <!-- Business Results -->
            {% if businessResults|length %}
                <div>
                    <h2 class="text-2xl font-bold text-green-400 mb-4">Businesses</h2>
                    <div class="space-y-6">
                        {% for entry in businessResults %}
                    <div class="bg-gray-900 border border-gray-800 rounded-lg p-6 hover:shadow-xl hover:shadow-blue-500/10 transition-shadow duration-300">
                        <div class="flex items-start justify-between gap-4">
                            <div class="flex-1 min-w-0">
                                <!-- Entry Type Badge -->
                                <div class="mb-2">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded text-xs font-medium bg-blue-900/50 text-blue-300 border border-blue-800">
                                        {{ entry.section.name }}
                                    </span>
                                </div>

                                <!-- Title -->
                                <h2 class="text-2xl font-bold text-gray-100 mb-2">
                                    <a href="{{ entry.url }}" class="hover:text-blue-400 transition-colors">
                                        {{ entry.title }}
                                    </a>
                                </h2>

                                <!-- Business-specific fields -->
                                <div class="space-y-2 text-sm text-gray-400 mb-3">
                                    {% set businessAddress = entry.businessAddress.one() %}
                                    {% if businessAddress %}
                                        <div class="flex items-start">
                                            <svg class="w-4 h-4 text-gray-500 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            </svg>
                                            <span>{{ businessAddress | address }}</span>
                                        </div>
                                    {% endif %}
                                    {% if entry.businessPhone %}
                                        <div class="flex items-center">
                                            <svg class="w-4 h-4 text-gray-500 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                            </svg>
                                            <span>{{ entry.businessPhone }}</span>
                                        </div>
                                    {% endif %}
                                </div>



                                <!-- Meta Info -->
                                <div class="flex items-center gap-4 text-xs text-gray-500">
                                    {% if entry.postDate %}
                                        <span>{{ entry.postDate|date('M j, Y') }}</span>
                                    {% endif %}
                                    {% if entry.searchScore %}
                                        <span class="hidden sm:inline">Score: {{ entry.searchScore|number_format(2) }}</span>
                                    {% endif %}
                                </div>
                            </div>

                            <!-- Business Image Thumbnail -->
                            {% if entry.businessImages.one() %}
                                <div class="flex-shrink-0 w-24 h-24 rounded-lg overflow-hidden bg-gray-800 hidden sm:block">
                                    <img src="{{ entry.businessImages.one().url }}" alt="{{ entry.businessImages.one().title ?: entry.title }}" class="w-full h-full object-cover">
                                </div>
                            {% endif %}
                        </div>

                        <!-- View Link -->
                        <div class="mt-4 pt-4 border-t border-gray-800">
                            <a href="{{ entry.url }}" class="inline-flex items-center text-sm font-medium text-blue-400 hover:text-blue-300 transition-colors">
                                View Details
                                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

        {% else %}
            <!-- No Results -->
            <div class="text-center py-12 bg-gray-900 border border-gray-800 rounded-lg">
                <svg class="mx-auto h-12 w-12 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <h3 class="mt-4 text-lg font-medium text-gray-300">No results found</h3>
                <p class="mt-2 text-gray-500">We couldn't find any results for "{{ cleanQuery }}"</p>
                <div class="mt-6">
                    <p class="text-sm text-gray-400 mb-4">Try:</p>
                    <ul class="text-sm text-gray-400 space-y-1 max-w-md mx-auto text-left">
                        <li class="flex items-start">
                            <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                            </svg>
                            <span>Using different keywords</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                            </svg>
                            <span>Checking your spelling</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                            </svg>
                            <span>Using more general terms</span>
                        </li>
                    </ul>
                </div>
            </div>
        {% endif %}

    {% else %}
        <!-- Empty State - No Query -->
        <div class="text-center py-12 bg-gray-900 border border-gray-800 rounded-lg">
            <svg class="mx-auto h-12 w-12 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <h3 class="mt-4 text-lg font-medium text-gray-300">Start searching</h3>
            <p class="mt-2 text-gray-500">Enter a search term above to find businesses and content</p>
        </div>
    {% endif %}
</div>

<style>
.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>
{% endblock %}
